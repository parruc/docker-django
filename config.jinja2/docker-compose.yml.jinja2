version: '2'
services:
  db:
    image: postgres:latest
    volumes:
      - ./db:/var/lib/postgresql
    restart: always
    environment:
      POSTGRES_DB: {{dbname}}
      POSTGRES_USER: {{dbuser}}
      POSTGRES_PASSWORD: {{dbpassword}}

  memcached:
    image: memcached:latest
    mem_limit: 256m
    command: memcached -m 256m

  django:
    depends_on:
      - db
      - memcached
    image: python:3.6
    entrypoint: /project/django_entrypoint.sh
    volumes:
      - ./project:/project
      - ./static:/var/www/static
      - ./media:/var/www/media
      - ./config/django_entrypoint.sh:/project/django_entrypoint.sh
      - ./config/uwsgi.ini:/project/uwsgi.ini
      - ./config/basesettings.py:/project/{{projectname}}/{{projectname}}/basesettings.py
    restart: always
{% if development %}
    stdin_open: true
    tty: true
{% endif %}

  web:
    depends_on:
      - django
    image: nginx:latest
    ports:
      - "127.0.0.1:{{port}}:80"
    volumes:
      - ./static:/var/www/static
      - ./media:/var/www/media
      - ./config/nginx.internal.conf:/etc/nginx/conf.d/default.conf
    restart: always
